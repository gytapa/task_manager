{# app/Resources/views/registration/register.html.twig #}
<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
<link rel="stylesheet" href="{{ asset('css/logreg.css') }}" />
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <a href="/login" id="login-form-link">Login</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="/register" class="active" id="register-form-link">Register</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            {{ form_start(form) }}
                            <form id="login-form" class="form-signin" method="post" role="form" style="display: block;">
                                <div class="form-group">
                                    {{ form_row(form.username, {'attr': {'class': 'form-control'}})  }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="from-group">
                                    {{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="from-group">
                                    {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }} <br>
                                </div>
                                {{ form_end(form) }}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>